


@using PurpleBuzz.Areas.Admin.ViewModels.FeaturedWorkComponent
@model FeaturedWorkComponentUpdateVM
    <!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Featured Work Component</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">

            <form enctype="multipart/form-data" asp-action="update" asp-controller="featuredworkcomponent" method="post">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photos"></label>
                    <input type="file" multiple class="form-control" asp-for="Photos" />
                    <span asp-validation-for="Photos"></span>
                </div>
                <button class="btn btn-primary" type="submit">Update</button>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Order</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var photo in Model.FeaturedWorkComponentPhotos)
                            {
                                <tr>
                                    <td> <img class="w-25" src="~/assets/img/@photo.Name" /></td>
                                    <td>@photo.Order.</td>
                                    <td>@photo.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="updatephoto" asp-controller="featuredworkcomponent" asp-route-id="@photo.Id" class="btn btn-primary">Update</a>
                                        <a onclick="return ConfirmDelete()"  class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                             }


                        </tbody>
                    </table>
                </div>
            </form>

        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/38.0.1/classic/ckeditor.js"></script>
    <script>ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });</script>


}


