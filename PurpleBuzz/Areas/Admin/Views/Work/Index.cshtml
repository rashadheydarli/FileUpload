
@using PurpleBuzz.Areas.Admin.ViewModels.Work
@model WorkIndexVM


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Works</h1>

    <a class="btn btn-primary" asp-action="create" asp-controller="work">Work</a>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Photo</th>
                            <th>Modified Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var work in Model.Works)
                        {
                            <tr>
                                <td>@work.Title</td>
                                <td>@work.WorkCategory.Name</td>
                                <td>@work.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@work.ModifiedDate?.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (!work.IsDeleted)
                                    {
                                        <a asp-action="update" asp-controller="work" asp-route-id="@work.Id" class="btn btn-primary">Update</a>
                                        <a onclick="return ConfirmDelete()" asp-action="delete" asp-controller="work" asp-route-id="@work.Id" class="btn btn-danger">Delete</a>
                                    }
                                    <a asp-action="details" asp-controller="work" asp-route-id="@work.Id" class="btn btn-info">Details</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
