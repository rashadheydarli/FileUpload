@using PurpleBuzz.Areas.Admin.ViewModels.WorkCategory
@model WorkCategoryIndexVM



<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Work categories</h1>

    <a class="btn btn-primary" asp-action="create" asp-controller="workcategory">Create</a>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            @*<th>Status</th>*@
                            <th>Created Date</th>
                            <th>Modified Date</th>
                            @*<th>Deleted Date</th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                       @foreach (var workCategory in Model.WorkCategories)
                        {
                            <tr>
                                <td>@workCategory.Name</td>
                                @*<td>
                                    @if (workCategory.IsDeleted)
                                    {
                                        <span class="text-danger">Deleted</span>

                                    }
                                    else
                                    {
                                        <span class="text-success">Active</span>
                                    }
                                </td>*@
                                <td>@workCategory.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@workCategory.ModifiedDate?.ToString("dd.MM.yyyy HH:mm")</td>
                                @*eger bu nulldursa bu metodu istifade etme*@
                                @*null olan bir deyerin birbasa valusuna muraciet etmek olmaz*@
                                @*<td>@workCategory.DeletedDate?.ToString("dd.MM.yyyy HH:mm")</td>*@
                                <td>
                                    @if (!workCategory.IsDeleted)
                                    {
                                        <a asp-action="update" asp-controller="workcategory" asp-route-id="@workCategory.Id" class="btn btn-primary">Update</a>
                                        <a onclick="return ConfirmDelete()"  asp-action="delete" asp-controller="workcategory" asp-route-id="@workCategory.Id" class="btn btn-danger">Delete</a>
                                    }
                                    <a asp-action="details" asp-controller="workcategory" asp-route-id="@workCategory.Id" class="btn btn-info">Details</a>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->